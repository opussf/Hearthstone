		<Size x="400" y="400" />
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
		</Layers>
	</Frame> -->
	<Frame name="HSConfig" toplevel="true" parent="UIParent" enableMouse="true" movable="true" resizable="false">
		<Size x="700" y="500" />
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_BG" file="Interface\DialogFrame\UI-DialogBox-Background">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<!-- Header -->
				<FontString name="$parent_Header" inherits="GameFontNormalLarge" text="HearthStone @VERSION@">
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP">
							<Offset x="0" y="-10"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_Close" inherits="UIPanelCloseButton" parent="HSConfig">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Button>
			<Frame name="$parent_TabPanels" parentKey="tabPanels" hidden="false">
				<Size x="600" y="420"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<!-- <Offset x="20" y="-50" /> -->
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color r="0.5" g="0.0" b="0.0" a="1" />
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Button name="$parent_Tab1" parentKey="tab1" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Tags"
								self:OnLoad()
								self:SetSelected(true)
								HS.MakeTabActive(self)
							</OnLoad>
							<OnClick>
								self:OnClick()
								HS.MakeTabActive(self)
							</OnClick>
						</Scripts>
						<Frames>
							<Frame name="$parent_Contents" parentKey="contents" hidden="false">
								<Size x="500" y="320"/>
								<Anchors>
									<Anchor point="TOPLEFT" relativeTo="HSConfig_TabPanels" relativePoint="TOPLEFT"/>
								</Anchors>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture setAllPoints="true">
											<Color r="0.0" g="0.5" b="0.0" a="1" />
										</Texture>
									</Layer>
								</Layers>
								<Frames>
									<Editbox name="$parent_TagEditBox"  parentKey="TagEditBox" multiline="true" enableMouse="false" >
										<Size x="300" y="100"/>
										<Anchors>
											<Anchor point="TOPLEFT" relativeTo="HSConfig_TabPanels_Tab1_Contents" relativePoint="TOPLEFT"/>
											<Anchor point="BOTTOMRIGHT" relativeTo="HSConfig_TabPanels_Tab1_Contents" relativePoint="BOTTOMRIGHT"/>
										</Anchors>
										<FontString inherits="ChatFontNormal"/>
										<Layers>
											<Layer level="BACKGROUND">
												<Texture setAllPoints="true">
													<Color r="0.0" g="0.0" b="0.0" a="1" />
												</Texture>
											</Layer>
										</Layers>

										<Scripts>
											<OnLoad>
												self:SetAutoFocus(false)
												self:SetText("Enter text here...")
											</OnLoad>
											<OnShow>
												print(self:GetName())
												print(self:GetParent():GetName())
											</OnShow>
										</Scripts>

									</Editbox>
								</Frames>

							</Frame>
						</Frames>
					</Button>
					<Button name="$parent_Tab2" parentKey="tab2" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_Tab1" relativePoint="RIGHT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Toys"
								self:OnLoad()
								HS.MakeTabActive(self)
							</OnLoad>
							<OnClick>
								self:OnClick()
								HS.MakeTabActive(self)
							</OnClick>
						</Scripts>
						<Frames>
							<Frame name="$parent_Contents" parentKey="contents" hidden="true">
								<Size x="500" y="320"/>
								<Anchors>
									<Anchor point="CENTER" relativeTo="HSConfig" relativePoint="CENTER"/>
								</Anchors>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture setAllPoints="true">
											<Color r="0.0" g="0.0" b="0.5" a="1" />
										</Texture>
									</Layer>
								</Layers>
							</Frame>
						</Frames>
					</Button>
					<Button name="$parent_Tab3" parentKey="tab3" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_Tab2" relativePoint="RIGHT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Config"
								self:OnLoad()
								HS.MakeTabActive(self)
							</OnLoad>
							<OnClick>
								self:OnClick()
								HS.MakeTabActive(self)
							</OnClick>
						</Scripts>
						<Frames>
							<Frame name="$parent_Contents" parentKey="contents" hidden="true">
								<Size x="500" y="320"/>
								<Anchors>
									<Anchor point="CENTER" relativeTo="HSConfig" relativePoint="CENTER"/>
								</Anchors>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture setAllPoints="true">
											<Color r="0.75" g="0.75" b="0.75" a="1" />
										</Texture>
									</Layer>
								</Layers>
							</Frame>
						</Frames>
					</Button>
				</Frames>
			</Frame>
		</Frames>
		<Scripts>
		</Scripts>
	</Frame>
</Ui>
