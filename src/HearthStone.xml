		<Size x="400" y="400" />
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
		</Layers>
	</Frame> -->
	<Frame name="HSThingy" toplevel="true" parent="UIParent" enableMouse="true" movable="true" resizable="false">
		<Size x="700" y="500" />
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<!-- Header -->
				<FontString name="$parent_Header" inherits="GameFontNormalLarge" text="HearthStone @VERSION@">
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP">
							<Offset x="0" y="-10"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Button name="$parent_Close" inherits="UIPanelCloseButton" parent="HSThingy">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Button>
			<Frame name="$parent_TabPanels" parentKey="tabPanels" toplevel="true" FrameStrata="MEDIUM" inherits="BasicFrameTemplateWithInset" hidden="true">
				<Size x="300" y="420" />
				<Anchors>
					<Anchor point="CENTER" relativeTo="UIParent" relativePoint="LEFT" x="500" y="100"/>
				</Anchors>
				<Frames>
					<Button name="$parent_Tab1" parentKey="tab1" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Tags"
									self:OnLoad()
								self:SetSelected(true)
							</OnLoad>
						</Scripts>
						<Frames>

						</Frames>
					</Button>
					<Button name="$parent_Tab2" parentKey="tab2" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_Tab1" relativePoint="RIGHT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Toys"
								self:OnLoad()
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Tab3" parentKey="tab3" inherits="MinimalTabTemplate" hidden="false">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_Tab2" relativePoint="RIGHT"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.tabText = "Config"
								self:OnLoad()
							</OnLoad>
						</Scripts>
					</Button>

				</Frames>
			</Frame>




			<!--
			<Button name="$parent_B1" inherits="UIPanelButtonTemplate" frameStrata="MEDIUM">
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="$parent_Art">
							<Size x="32" y="32"/>
						</Texture>
					</Layer>
				</Layers>
			</Button> -->
		</Frames>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_BG" file="Interface\DialogFrame\UI-DialogBox-Background">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
		</Scripts>
	</Frame>
</Ui>
